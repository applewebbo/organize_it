# Django Core Settings
SECRET_KEY=your-secret-key-here
ENVIRONMENT=dev  # dev, prod, or test
DEBUG=on
ALLOWED_HOSTS=*

# Security (Production only)
ACCOUNT_DEFAULT_HTTP_PROTOCOL=https
CSRF_COOKIE_SECURE=on
CSRF_TRUSTED_ORIGINS=https://yourdomain.com
SESSION_COOKIE_SECURE=on
SECURE_SSL_REDIRECT=on
SECURE_HSTS_SECONDS=60

# Database (Production only)
SQL_ENGINE=django.db.backends.postgresql
SQL_DATABASE=your_database
SQL_USER=your_user
SQL_PASSWORD=your_password
SQL_HOST=localhost
SQL_PORT=5432

# External Services
MAPBOX_ACCESS_TOKEN=your-mapbox-token
GOOGLE_PLACES_API_KEY=your-google-places-key
UNSPLASH_ACCESS_KEY=your-unsplash-key

# Email (Production only)
ADMIN_EMAIL=admin@example.com
MAILGUN_API_KEY=your-mailgun-api-key
MAILGUN_API_URL=https://api.mailgun.net/v3/your-domain
MAILGUN_SENDER_DOMAIN=mg.yourdomain.com

# Cloudinary (Production only)
CLOUDINARY_URL=cloudinary://api_key:api_secret@cloud_name

# Redis (Production only - for django-q2 task queue)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Django-Q2 Worker Configuration (Optional - override defaults)
Q_CLUSTER_WORKERS=4
Q_CLUSTER_TIMEOUT=90
Q_CLUSTER_RETRY=120
Q_CLUSTER_MAX_ATTEMPTS=3
Q_CLUSTER_QUEUE_LIMIT=50
